pipeline {
    agent any

    environment {
        SECRET = credentials('DEMO_SECRET')
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                url: 'https://github.com/pulipatitejashwini/devops_day-8_worklog.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'echo "No dependencies required for static HTML project"'
            }
        }

        stage('Validation Test') {
            steps {
                sh 'chmod +x test.sh'
                sh './test.sh'
            }
        }

        stage('Use Secret Variable') {
            steps {
                sh '''
                   echo "Using secret securely"
                   echo "Length of secret is: ${#SECRET}"
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Application Deployed Successfully"'
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully"
        }

        failure {
            echo "Pipeline failed - please check logs"
        }
    }
}

